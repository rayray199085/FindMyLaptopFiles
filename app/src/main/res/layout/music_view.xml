<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="#000000"
                android:layout_height="match_parent">
<TextView android:layout_width="match_parent"
          android:layout_margin="5dp"
          android:gravity="left|center_vertical"
          android:textColor="#b77813"
          android:textStyle="bold"
          android:id="@+id/music_text_view"
          android:layout_height="50dp"/>

    <Button android:layout_width="wrap_content"
            android:text="play"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textColor="#5dfd00"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/music_text_view"
            android:background="@drawable/music_btn"
            android:id="@+id/music_play_button"
            android:layout_height="wrap_content"/>
    <Button android:layout_width="wrap_content"
            android:id="@+id/music_stop_btn"
            android:text="Stop"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#f90000"
            android:background="@drawable/music_btn"
            android:layout_below="@+id/music_play_button"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"/>

    <ProgressBar android:layout_width="match_parent"
                 android:layout_below="@+id/music_stop_btn"
                 style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                 android:id="@+id/progress_bar"
                 android:layout_margin="10dp"
                 android:layout_height="wrap_content"/>
    <Button android:layout_width="wrap_content"
            android:id="@+id/music_delete_file_button"
            android:text="Delete"
            android:textStyle="bold"
            android:textColor="#5a01ff"
            android:background="@drawable/music_btn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>
</RelativeLayout>